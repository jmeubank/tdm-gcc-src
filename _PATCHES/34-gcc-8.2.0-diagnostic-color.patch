@@ -22,6 +22,11 @@
 
 #ifdef __MINGW32__
 #  include <windows.h>
+#  ifdef __MINGW32_VERSION /* MinGW.org */
+#    include <ddk/ntifs.h>
+#  else /* MinGW-w64 */
